<%- include('../partials/header.ejs'); %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            <form class="form" method="post">
              <div class="form-group">
                <label for="NameTextField">Name</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Tournament Name" name="name" value="<%= tournaments.Name %>" required>
              </div>
              <div class="form-group">
                <label for="StartDateTextField">Start Date</label>
                <input type="text" class="form-control" id="StartDateTextField"
                placeholder="Start Date" name="startdate" value="<%= tournaments.StartDate %>"  required>
              </div>

              <div class="form-group">
                <label for="BriefDescriptionTextField">Brief Description</label>
                <input type="text" class="form-control" id="BriefDescriptionTextField"
                placeholder="Brief Description" name="briefdescription" value="<%= tournaments.Description %>"  required>
              </div>
              
              
              <button type="submit"  class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/tournaments" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>

<%- include('../partials/footer.ejs'); %>
