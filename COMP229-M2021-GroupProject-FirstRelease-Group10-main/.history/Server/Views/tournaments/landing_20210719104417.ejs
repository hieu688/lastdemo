<%- include('../partials/header.ejs'); %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>Your tournaments </h3>
          <!-- ------------------------ -->
          <!-- THE ADD BUTTON HAS BEEN FIXED -->
          <!-- ------------------------ -->
          
          <br>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th class="text-center">Date</th>
                  <th class="text-center">Brief description</th>
                  <th class="text-center"></th>
                  <th class="text-center"></th>
                </tr>
                </thead>
                <tbody>
                <!-- Template Row -->
                <% for (let count = 0; count < tournaments.length; count++) { %>
                <% if (tournaments[count].IsActive == "TRUE") { %>
                <tr>
                  <td><%= tournaments[count].Name %></td>
                  <td class="text-center"><%= tournaments[count].StartDate %></td>
                  <td class="text-center"><%= tournaments[count].Description %></td>

                  <td class="text-center">
                    <!-- ------------------------ -->
                    <!-- EDIT BUTTON HAS BEEN ADDED HERE -->
                    <!-- ------------------------ -->
                    <td class="text-center"><a href="/tournaments/<%= tournaments[count]._id %>" class="btn btn-primary btn-sm edit"><i class="fas fa-edit fa-sm"></i>View and Update</a></td>
                  </td>

                  
                </tr>
                <% } %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

<%- include('../partials/footer.ejs'); %>


